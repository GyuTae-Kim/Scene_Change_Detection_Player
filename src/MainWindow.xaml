            <Canvas x:Name="controlBackground" Background="{DynamicResource ShadedBackgroundBrush}" Height="131" VerticalAlignment="Bottom" Grid.RowSpan="3"/>

            <Grid Name="SliderBoxGrid" Grid.Row="1">
