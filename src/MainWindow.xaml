                </DockPanel>
                <DockPanel x:Name="RightControlBox" HorizontalAlignment="Right" Width="195" Margin="0,0,10,0">
                    <ToggleButton Name="VolumeButton" Style="{DynamicResource ModernToggleButtonStyle}" Click="VolumeButton_Click">
